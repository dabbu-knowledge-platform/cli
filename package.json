{
	"name": "cli",
	"version": "3.3.0-beta.0",
	"main": "dist/compiled/index.js",
	"bin": "dist/compiled/index.js",
	"repository": "https://github.com/dabbu-knowledge-platform/cli",
	"author": "Vedant K (gamemaker1) <gamemaker0042@gmail.com>",
	"license": "GPL-3.0-or-later",
	"scripts": {
		"start": "./scripts/run.sh",
		"start:prod": "./scripts/run.sh prod",
		"test": "./scripts/test.sh",
		"lint": "./scripts/lint.sh",
		"fix": "./scripts/fix-lint-errors.sh",
		"clean": "./scripts/clean.sh",
		"build": "./scripts/build.sh",
		"package": "./scripts/package.sh",
		"ci": "./scripts/ci.sh",
		"bump": "./scripts/bump.sh",
		"postinstall": "./scripts/patch-deps.sh"
	},
	"dependencies": {
		"axios": "^0.21.1",
		"chalk": "^4.1.0",
		"cli-table3": "^0.6.0",
		"conf": "^9.0.2",
		"enquirer": "^2.3.6",
		"env-paths": "^2.2.1",
		"figlet": "^1.5.0",
		"file-type": "^16.4.0",
		"form-data": "^4.0.0",
		"fs-extra": "^10.0.0",
		"nanoid": "^3.1.22",
		"open": "^8.2.0",
		"ora": "^5.4.0",
		"readcommand": "0.3.0",
		"terminal-link": "2.1.1",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@types/axios": "^0.14.0",
		"@types/chalk": "^2.2.0",
		"@types/env-paths": "^2.1.0",
		"@types/figlet": "^1.5.0",
		"@types/file-type": "^10.9.1",
		"@types/form-data": "^2.5.0",
		"@types/fs-extra": "^9.0.11",
		"@types/jest": "^26.0.23",
		"@types/node": "^15.6.1",
		"@types/open": "^6.2.1",
		"@types/ora": "^3.2.0",
		"@types/terminal-link": "^1.2.0",
		"@types/winston": "^2.4.4",
		"@typescript-eslint/eslint-plugin": "^4.25.0",
		"@typescript-eslint/parser": "^4.25.0",
		"eslint": "^7.27.0",
		"eslint-config-prettier": "^8.2.0",
		"eslint-plugin-prettier": "^3.4.0",
		"husky": "^6.0.0",
		"jest": "^27.0.1",
		"lint-staged": "^11.0.0",
		"pkg": "^5.3.0",
		"prettier": "^2.2.1",
		"ts-jest": "^27.0.0",
		"typescript": "^4.2.4"
	},
	"jest": {
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"moduleFileExtensions": [
			"ts",
			"js",
			"json"
		]
	},
	"prettier": {
		"semi": false,
		"trailingComma": "all",
		"singleQuote": true,
		"printWidth": 72,
		"useTabs": true,
		"tabWidth": 2
	},
	"eslintConfig": {
		"parser": "@typescript-eslint/parser",
		"parserOptions": {
			"ecmaVersion": "next",
			"sourceType": "module"
		},
		"extends": [
			"plugin:@typescript-eslint/recommended",
			"plugin:prettier/recommended"
		],
		"rules": {
			"@typescript-eslint/no-non-null-assertion": 0,
			"@typescript-eslint/no-explicit-any": 0
		}
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.ts": [
			"yarn eslint 'src/**/*.ts' 'tests/**/*.ts' --fix"
		]
	},
	"pkg": {
		"outputPath": "dist/binaries/",
		"scripts": [
			"dist/compiled/**/*.js"
		],
		"assets": [
			"node_modules/figlet/fonts/Standard.flf"
		],
		"targets": [
			"node14-win-x64",
			"node14-macos-x64",
			"node14-linux-x64",
			"node14-alpine-x64"
		]
	}
}
